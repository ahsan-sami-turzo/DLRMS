<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>DLRMS Scraped Data</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .scroll-table {
      overflow-x: auto;
      margin-bottom: 3rem;
    }
    table {
      min-width: 600px;
    }
  </style>
</head>
<body>
  <div class="container py-5">
    <h1 class="mb-5 text-center">ðŸ“Š DLRMS Scraped Data Dashboard</h1>

    <!-- Surveys -->
    <h2>Survey Types</h2>
    <div class="scroll-table">
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Name (English)</th>
            <th>Key</th>
          </tr>
        </thead>
        <tbody>
          <% surveys.forEach(s => { %>
            <tr>
              <td><%= s.id %></td>
              <td><%= s.name %></td>
              <td><%= s.name_en %></td>
              <td><%= s.key %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Divisions -->
    <h2>Divisions</h2>
    <div class="scroll-table">
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Name (English)</th>
            <th>BBS Code</th>
            <th>Row Status</th>
          </tr>
        </thead>
        <tbody>
          <% divisions.forEach(d => { %>
            <tr>
              <td><%= d.id %></td>
              <td><%= d.name %></td>
              <td><%= d.name_en %></td>
              <td><%= d.bbs_code %></td>
              <td><%= d.row_status %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Districts -->
    <h2>Districts</h2>
    <div class="scroll-table">
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Name (English)</th>
            <th>BBS Code</th>
            <th>Division ID</th>
            <th>Division Name</th>
            <th>Division Name (English)</th>
          </tr>
        </thead>
        <tbody>
          <% districts.forEach(d => { %>
            <tr>
              <td><%= d.id %></td>
              <td><%= d.name %></td>
              <td><%= d.name_en %></td>
              <td><%= d.bbs_code %></td>
              <td><%= d.division_id %></td>
              <td><%= d.division_name %></td>
              <td><%= d.division_name_en %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Upazilas -->
    <h2>Upazilas</h2>
    <div class="scroll-table">
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Name (English)</th>
            <th>BBS Code</th>
            <th>LAMS ID</th>
            <th>Is Circle</th>
            <th>Division ID</th>
            <th>Division Name</th>
            <th>District ID</th>
            <th>District Name</th>
          </tr>
        </thead>
        <tbody>
          <% upazilas.forEach(u => { %>
            <tr>
              <td><%= u.id %></td>
              <td><%= u.name %></td>
              <td><%= u.name_en %></td>
              <td><%= u.bbs_code %></td>
              <td><%= u.lams_id %></td>
              <td><%= u.is_circle %></td>
              <td><%= u.division_id %></td>
              <td><%= u.division_name %></td>
              <td><%= u.district_id %></td>
              <td><%= u.district_name %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
